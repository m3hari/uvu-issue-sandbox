{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    },
    "include": ["tests/**/*"]
  },
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["@types/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
